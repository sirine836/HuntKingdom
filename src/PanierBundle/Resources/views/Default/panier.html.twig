{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="check">
            <h1>My Shopping Bag ( {{ render(controller('PanierBundle:Default:displayNBR')) }} )
            </h1>
            <div class="col-md-9 cart-items">

                <script>$(document).ready(function(c) {
                        $('.close1').on('click', function(c){
                            $('.cart-header').fadeOut('slow', function(c){
                                $('.cart-header').remove();
                            });
                        });
                    });
                </script>
                {% for lignePanier in panier.products %}

                <div class="cart-header">
                    <div>
                        <a href="{{ path('panier_deleteProduct', { 'id': lignePanier.id }) }}">
                            <img class="close1">
                        </a>
                    </div>

                    <div class="cart-sec simpleCart_shelfItem">
                        <div class="cart-item cyc">
                            <img src="{{ asset('images/') }}{{ lignePanier.product.image }}" class="img-responsive" alt=""/>
                        </div>
                        <div class="cart-item-info">
                            <h3><a href="#">{{ lignePanier.product.nompr }}</a><span>{{ lignePanier.product.descrip }}</span></h3>
                            <ul class="qty">
                                <li><p>Price : {{ lignePanier.product.prix }}</p></li>
                                <a href="{{ path('panier_increaseProductQTE', { 'id': lignePanier.id }) }}" class="add-cart item_add">+</a>
                                <a href="{{ path('panier_DecreaseProductQTE', { 'id': lignePanier.id }) }}" class="add-cart item_add">-</a>

                            </ul>
                            <ul class="qty">
                            <li><p>Qty : {{ lignePanier.quantite }}</p></li>
                            </ul>

                        </div>
                        <div class="clearfix"></div>

                    </div>
                </div>
                {% endfor %}

                <script>$(document).ready(function(c) {
                        $('.close2').on('click', function(c){
                            $('.cart-header2').fadeOut('slow', function(c){
                                $('.cart-header2').remove();
                            });
                        });
                    });
                </script>

            </div>

            <div class="col-md-3 cart-total">
                <a class="continue" href="{{ path("facture_historiqueIndex") }}">Facture</a>
                <div class="price-details">
                    <h3>Price Details</h3>
                    <span>Total</span>
                    <span class="total1">{{ panier.prixTotal }}</span>
                    <span>Discount</span>
                    <span class="total1">---</span>
                    <span>Delivery Charges</span>
                    <span class="total1">5000</span>
                    <div class="clearfix"></div>
                </div>
                <ul class="total_price">
                    <li class="last_price"> <h4>TOTAL</h4></li>
                    <li class="last_price"><span>{{ panier.prixTotal }}</span></li>
                    <div class="clearfix"> </div>
                </ul>


                <div class="clearfix"></div>
                <a class="order" href="{{ path("facture_new") }}"> Order</a>

            </div>

            <div class="clearfix"> </div>
        </div>
    </div>



{% endblock %}
