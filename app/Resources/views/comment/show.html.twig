{% extends 'base.html.twig' %}

{% block body %}
<div class="blog">
    <div class="container">
        <div class="blog-top">
    <h1>Details</h1>

    <div class="container" style="width:80%;float: left;background-color: gray;padding: 1%;border-radius: 20px">
        <div style="float:left;width:80%;background-color: #e6e6e6;padding:10px;border-radius: inherit">{{ comment.content }} </div>
        <div style="text-align:center;float:right;width: 10%;background-color: #e6e6e6;padding:inherit;border-radius: inherit"><h4>{{ comment.votecount }}</h4></div>
    </div>
    <div style="background-color:#e6e6e6 ; border-radius: 20px;width: 30%;padding:1%"><b>Comment By: {{ comment.user.username }}</b> </div>
    <div>
        <a href="{{ path('post_show', { 'id': comment.post.id }) }}" class="btn btn-default">Back to post</a>
        {% if comment.user.id == user.id %}<a href="{{ path('comment_edit', { 'id': comment.id }) }}" class="btn btn-warning" style="margin: 2%; float: bottom">Edit</a>{% endif %}
    </div>
        </div></div></div>
{% endblock %}
