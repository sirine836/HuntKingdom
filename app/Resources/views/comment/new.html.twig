{% extends 'base.html.twig' %}

{% block body %}
<div class="blog">
    <div class="container">
        <div class="blog-top">
    <div style="border-radius: 20px;
                background-color: #ffc54e;
                padding: 10px;"><h3 style="text-align: left;color: white">Add Comment</h3></div>
    <div style="border-radius: 20px;
                    background-color: #e6e6e6;
                    padding: 30px;">
        {% form_theme form 'bootstrap_3_layout.html.twig' %}
        {{ form_start(form) }}
        <div style="width: 98%; margin-left: 1%;padding-bottom: 10px">{{ form_widget(form.content) }}</div>
        <input style="margin-left: 1%" type="submit" value="Add" class="btn btn-success"/>
        {{ form_end(form) }}
    </div>

    <ul>
        <li>
            <a href="{{ path('comment_index') }}">Back to the list</a>
        </li>
    </ul>
        </div></div></div>
{% endblock %}
